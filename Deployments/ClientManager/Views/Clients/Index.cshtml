@model IEnumerable<ClientManager.Models.ClientModel>

@{
    ViewBag.Title = "Index";
}

<h2>Clients</h2>

<table class="table">
    <tr>       
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>        
        <th>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmailAddress)
        </th>
        <th>
            @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success btn-sm col-md-6" })
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
       
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
       
        <td>
            @Html.DisplayFor(modelItem => item.PhoneNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EmailAddress)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new {  id=item.ClientId }, new { @class= "btn btn-info" }) |
            <a href="javascript:void(0)" class="delete btn btn-danger" client="@item.ClientId" address="@item.AddressId">Delete</a>
        </td>
    </tr>
}

</table>

<script src="~/Scripts/App/client.module.js"></script>
<script>
    $(document).ready(function () {
        ClientModule.Init();
    });
</script>